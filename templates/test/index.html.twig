{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="m-2 alert alert-{{ label }} alert-dismissible fade show overlay" {% if label != "danger" %}data-auto-dismiss{% endif%} role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <a href="{{ path('test-pre') }}">Test PRE SUBMIT form</a>
    <br>
    <a href="{{ path('test-post') }}">Test POST SUBMIT form</a>
</div>
{% endblock %}
